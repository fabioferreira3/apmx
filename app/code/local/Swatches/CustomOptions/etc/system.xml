<?xml version="1.0"?>
<config>
    <sections>
        <swatches translate="label" module="swatches_customoptions">
            <label>Color Swatches</label>
            <tab>catalog</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <customoptions translate="label">
                    <label>Custom Options</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>100</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    
                    <comment><![CDATA[
                        <div style="padding:10px;background-color:#fff;border:1px solid #ddd;margin-bottom:7px;">
                        Please, If you have any questions about the extension feel free to contant us.
                        <br/><a href="mailto:easyswatches@gmail.com">easyswatches@gmail.com</a>
                        </div>
                    ]]></comment>
                    
                    <fields>
                        <enabled translate="label comment">
                            <label>Enabled on Frontend</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_enabledisable</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <width translate="label comment">
                            <label>Image Width</label>
                            <frontend_type>Text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </width>
                        <height translate="label comment">
                            <label>Image Height</label>
                            <comment><![CDATA[Leave width and height blank to show the original sizes]]></comment>
                            <frontend_type>Text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </height>
                        <show_text translate="label comment">
                            <label>Show State Text under Images</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_text>
                    </fields>
                </customoptions>
            </groups>
        </swatches>
    </sections>
</config>
