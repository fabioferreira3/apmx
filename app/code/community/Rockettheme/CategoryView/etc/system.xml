<config>
    <tabs>
        <rockettheme translate="label" module="categoryview">
            <label>RT RokMage Modules</label>
            <sort_order>196</sort_order>
        </rockettheme>
    </tabs>
    <sections>
        <category_view translate="label" module="categoryview">
            <label>CategoryView</label>
            <tab>rockettheme</tab>
            <frontend_type>text</frontend_type>
            <sort_order>6</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<enablecategoryview translate="label">
                            <label>Enable Category View:</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enablecategoryview>
						<localoverride translate="label, comment">
                            <comment><![CDATA[Default is 3 column. If set to "Yes" the 2 column left layout be be used, and all right sidebar content will be moved to left sidebar]]></comment>
                            <label>Use 2 Column Layout:</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</localoverride>
						<truncate translate="label, comment">
							<label>Truncate Product Titles/Descriptions:</label>
							<comment><![CDATA[Choose whether or not to truncate titles/descriptions (good if you have long product names/descriptions). Doesn't apply to Custom Content]]></comment>
							<frontend_type>select</frontend_type>
                            <source_model>categoryviewmodel/Categoryviewtruncate</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                        </truncate>
						<truncate_titlelength translate="label, comment">
							<label>Max Titles Length:</label>
							<comment><![CDATA[Set the maximum length for product titles (for example '50')]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                        </truncate_titlelength>
						<truncate_desclength translate="label, comment">
							<label>Max Descriptions Length:</label>
							<comment><![CDATA[Set the maximum length for product descriptions (for example '110')]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                        </truncate_desclength>
						<defaultlayout translate="label, comment">
							<label>Default products layout:</label>
							<comment><![CDATA[Choose default layout for product list]]></comment>
							<frontend_type>select</frontend_type>
                            <source_model>categoryviewmodel/Categoryviewdefaultlayout</source_model>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</defaultlayout>
                    </fields>
                </general>
				<settings translate="label">
				<label>Product Filter Settings</label>
				<frontend_type>text</frontend_type>
				<sort_order>2</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
					<fields>
						<filteraccordion translate="label, comment">
							<label>Use Accordion Effect:</label>
							<comment><![CDATA[Use 'accordion' effect in 'product filter' section]]></comment>
							<frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</filteraccordion>
						<filtertitle translate="label, comment">
							<label>Product Filter Title:</label>
							<comment><![CDATA[Add a title for the 'product filter' section (leave blank to use default 'Filter products by')]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</filtertitle>
						<openfirst translate="label, comment">
							<label>Open first Accordion by default:</label>
							<comment><![CDATA[Enable this to show first filter accordion in open state by default]]></comment>
							<frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</openfirst>
					</fields>
				</settings>
				<imagesettings translate="label">
				<label>Category Product Image Settings</label>
				<frontend_type>text</frontend_type>
				<sort_order>3</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
					<fields>
						<listimageheight translate="label, comment">
							<label>Image Height:</label>
							<comment><![CDATA[Set the height, in pixels, of the category product images (for example '135' - minus the 'px')]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</listimageheight>
						<listimagewidth translate="label, comment">
							<label>Image Width:</label>
							<comment><![CDATA[Set the width, in pixels, of the category product images (for example '135' - minus the 'px')]]></comment>
							<frontend_type>text</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</listimagewidth>
					</fields>
				</imagesettings>
            </groups>
        </category_view>
    </sections>
</config>