<config>
    <tabs>
        <rockettheme translate="label" module="cmscallouts">
            <label>RT RokMage Modules</label>
            <sort_order>196</sort_order>
        </rockettheme>
    </tabs>
    <sections>
        <cms_callouts translate="label" module="cmscallouts">
            <label>CmsCallouts</label>
            <tab>rockettheme</tab>
            <frontend_type>text</frontend_type>
            <sort_order>8</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enableleft translate="label">
                            <label>Enable Left CMS Callout</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enableleft>
						<enableright translate="label">
                            <label>Enable Right CMS Callout</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enableright>		
                    </fields>
                </general>
                <settings translate="label">
				<label>Content</label>
				<frontend_type>text</frontend_type>
				<sort_order>2</sort_order>
				<show_in_default>1</show_in_default>
				<show_in_website>1</show_in_website>
				<show_in_store>1</show_in_store>
					<fields>
						<leftcallouttitle translate="label, comment">
							<label>Left Callout Title:</label>
							<frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</leftcallouttitle>
						<leftcallouttext translate="label, comment">
							<label>Left Callout Text:</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>2</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</leftcallouttext>
						<leftcalloutblock translate="label, comment">
							<label>Include Cms Block:</label>
							<comment><![CDATA[Select CMS block to include in this callout]]></comment>
							<frontend_type>select</frontend_type>
                            <source_model>cmscalloutsmodel/Cmsblocks</source_model>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</leftcalloutblock>
						<rightcallouttitle translate="label, comment">
							<label>Right Callout Title:</label>
							<frontend_type>text</frontend_type>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</rightcallouttitle>
						<rightcallouttext translate="label, comment">
							<label>Right Callout Text:</label>
							<frontend_type>textarea</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</rightcallouttext>
						<rightcalloutblock translate="label, comment">
							<label>Include Cms Block:</label>
							<comment><![CDATA[Select CMS block to include in this callout]]></comment>
							<frontend_type>select</frontend_type>
                            <source_model>cmscalloutsmodel/Cmsblocks</source_model>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</rightcalloutblock>
					</fields>
				</settings>
            </groups>
        </cms_callouts>
